{
  "name": "angular-windows",
  "description": "Simple Angular-based floating window containers",
  "version": "1.0.8",
  "license": "ISC",
  "author": {
    "name": "Mateusz Bilicz",
    "url": "https://mateuszbilicz.pl"
  },
  "repository": "https://github.com/mateuszbilicz/ngx-windows",
  "homepage": "https://github.com/mateuszbilicz/ngx-windows",
  "private": false,
  "exports": {
    "default": [
      "projects/ngx-windows/src/public-api.ts"
    ]
  },
  "keywords": [
    "Angular",
    "floating window",
    "HTML Windows"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build-ngx-windows": "ng build ngx-windows",
    "update-ngx-windows": "ng build ngx-windows; npm pack ./dist/ngx-windows; npm install ./ngx-windows-1.0.8.tgz",
    "test": "ng test",
    "test-ngx-windows": "ng test ngx-windows",
    "publish": "ng build ngx-windows; cd dist/ngx-windows; npm publish"
  },
  "dependencies": {
    "@angular/animations": "^21.1.5",
    "@angular/common": "^21.1.5",
    "@angular/compiler": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular/forms": "^21.1.5",
    "@angular/platform-browser": "^21.1.5",
    "@angular/platform-browser-dynamic": "^21.1.5",
    "@angular/router": "^21.1.5",
    "ngx-windows": "file:ngx-windows-1.0.8.tgz",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.5",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~6.0.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.1.0",
    "typescript": "~5.9.3"
  }
}
